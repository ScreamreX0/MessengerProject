<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="60dp">

    <ImageView
        android:id="@+id/i_dialog_member_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:background="@drawable/background_add_button"
        android:src="@drawable/ic_round_person_24"
        android:text="Button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_goneMarginBottom="10dp"
        app:layout_goneMarginTop="10dp"
        app:tint="@color/white" />

    <TextView
        android:id="@+id/i_dialog_member_name"
        android:layout_width="150dp"
        android:layout_height="35dp"
        android:layout_marginStart="32dp"
        android:autoSizeTextType="uniform"
        android:gravity="center"
        android:text="+79274304923"
        app:layout_constraintBottom_toBottomOf="@+id/i_dialog_member_icon"
        app:layout_constraintStart_toEndOf="@+id/i_dialog_member_icon"
        app:layout_constraintTop_toTopOf="@+id/i_dialog_member_icon"
        app:layout_constraintVertical_bias="0.533" />

</androidx.constraintlayout.widget.ConstraintLayout>